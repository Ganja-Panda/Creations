{
    "enable_rules": {
        "empty_functions": true,
        "empty_loops": true,
        "debug_traces": true,
        "global_variables": true,
        "unreachable_code": true,
        "complexity": true,
        "unused_variables": true
    },
    "message_templates": {
        "empty_functions": "Warning: Empty function definition in {file}",
        "empty_loops": "Warning: Empty loop detected in {file}",
        "debug_traces": "Warning: Potential debug trace in {file}",
        "global_variables": "Warning: Global variable detected in {file}",
        "unreachable_code": "Warning: Possible unreachable code after return statement in {file}",
        "complexity": "Warning: High nesting level ({level}) in {file}",
        "unused_variables": "Warning: Potential unused variable '{variable}' in {file}"
    },
    "complexity": {
        "max_nesting_level": 4
    },
    "verbose": true
}
